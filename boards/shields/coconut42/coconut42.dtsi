&coconut42_6col_layout {
    transform = <&default_transform>;
};

&coconut42_5col_layout {
    transform = <&five_column_transform>;
};

/ {
    chosen {
        zephyr,display = &oled;
        zmk,kscan = &kscan0;
        zmk,physical-layout = &coconut42_6col_layout;
    };

    default_transform: matrix_transform_0 {
        columns = <14>;
        rows = <11>;
        map = <
            RC(3,0) RC(3,1) RC(3,2) RC(3,4) RC(3,5) RC(3,6)   RC(10,13) RC(10,12) RC(10,11) RC(10,9)  RC(10,8) RC(10,7)
            RC(2,0) RC(2,1) RC(2,3) RC(2,4) RC(2,5) RC(2,6)   RC(9,13)  RC(9,12)  RC(9,11)  RC(9,10)  RC(9,8)  RC(9,7)
            RC(1,0) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)   RC(8,13)  RC(8,12)  RC(8,11)  RC(8,10)  RC(8,9)  RC(8,7)
                                    RC(0,4) RC(0,5) RC(0,6)   RC(7,13)  RC(7,12)  RC(7,11)
        >;
    };

    five_column_transform: matrix_transform_1 {
        columns = <14>;
        rows = <11>;
        map = <
            RC(3,1) RC(3,2) RC(3,4) RC(3,5) RC(3,6)   RC(10,13) RC(10,12) RC(10,11) RC(10,9)  RC(10,8)
            RC(2,1) RC(2,3) RC(2,4) RC(2,5) RC(2,6)   RC(9,13)  RC(9,12)  RC(9,11)  RC(9,10)  RC(9,8)
            RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)   RC(8,13)  RC(8,12)  RC(8,11)  RC(8,10)  RC(8,9)
                            RC(0,4) RC(0,5) RC(0,6)   RC(7,13)  RC(7,12)  RC(7,11)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-charlieplex";
        wakeup-source;
    };

    // TODO: per-key RGB node(s)?
};

&xiao_i2c {
    status = "okay";

    oled: ssd1306@3c {
        compatible = "solomon,ssd1306fb";
        reg = <0x3c>;
        width = <128>;
        height = <32>;
        segment-offset = <0>;
        page-offset = <0>;
        display-offset = <0>;
        multiplex-ratio = <31>;
        segment-remap;
        com-invdir;
        com-sequential;
        inversion-on;
        prechargep = <0x22>;
    };
};
